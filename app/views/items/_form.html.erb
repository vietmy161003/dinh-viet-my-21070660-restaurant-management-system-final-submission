<%= form_with(model: item) do |form| %>
<% if item.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :price, class: label_class %>
          <%= form.number_field :price, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :deleted, class: label_class %>
          <%= form.number_field :deleted, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if item.persisted? %>
<%= link_to "Cancel", item, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", items_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>

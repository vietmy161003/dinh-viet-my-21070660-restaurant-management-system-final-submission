        <%= form.label :description, class: label_class %>
          <%= form.text_field :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :status, class: label_class %>
          <%= form.text_field :status, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :type, class: label_class %>
          <%= form.text_field :type, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if coupon.persisted? %>
<%= link_to "Cancel", coupon, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", coupons_path, class:  "text-neutral-700 underline inline-block ml-3" %>

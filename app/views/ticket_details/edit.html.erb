<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between mb-6 flex-wrap">
    <h1 class="font-bold text-3xl mb-6">Edit ticket_detail</h1>
    <% if @ticket_detail.persisted? %>
    <%= button_to 'Destroy', @ticket_detail, method: :delete, class: "text-red-700 underline", data: { turbo_confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', ticket_detail: @ticket_detail %>
</div>
